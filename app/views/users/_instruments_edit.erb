<div class='checkbox-form-div'>
  <form class="checkbox-form" action='/users/<%= current_user.id %>/instruments/edit' method='post'>
    <input type="hidden" name="_method" value="put">
    <% Instrument.all.each do |i| %>
      <% if current_user.instruments.include? i %>
        <label class="checkbox-inline"><input type="checkbox" name="instruments[<%= i.name %>]" value="<%= i.name %>" checked="checked"> <%= i.name %></label><br>
      <% else %>
        <label class="checkbox-inline"><input type="checkbox" name="instruments[<%= i.name %>]" value="<%= i.name %>"> <%= i.name %></label><br>
      <% end %>
    <% end %>
    <input type='submit' value='Update'>
  </form>
</div>