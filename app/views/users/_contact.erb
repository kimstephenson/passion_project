<div>
  <form id="email-form" action="/users/<%= @user.id %>/contact" method="post">
    <div class="form-group row">
      <label class="col-xs-2 col-form-label">Subject</label>
      <div class="col-xs-10">
        <input class="form-control" type="text" name="subject">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-xs-2 col-form-label">Body</label>
      <textarea class="form-control" rows="10" cols="50" name="body"></textarea>
    </div>
    <input class="btn btn-primary form-control" type="submit" value="Send" >
  </form>
</div>

<% if @message_sent %>
  <p>Your message was sent.</p>
<% end %>