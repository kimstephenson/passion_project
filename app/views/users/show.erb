<div class='fixed-nav-pad container'>
<h2><%= @user.first_name %> <%= @user.last_name%></h2>
<h3><%= @user.city %>, <%= @user.state %></h3>
<h3>Instruments</h3>
  <ul>
  <% @user.instruments.each do |inst| %>
    <li><%= inst.name %></li>
  <% end %>
</ul>
<h3>Genres</h3>
  <ul>
  <% @user.genres.each do |genre| %>
    <li><%= genre.name %></li>
  <% end %>
</ul>
</div>

<% if @user == current_user %>
  <div class="container">
    <a href="/users/<%= current_user.id %>/edit">Edit My Profile</a>
  </div>
<% end %>



